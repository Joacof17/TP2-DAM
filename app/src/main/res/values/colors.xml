        <item name="colorPrimaryVariant">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_500</item>
        <item name="colorSurface">@color/purple_700</item>
        <item name="colorOnPrimary">@color/teal_200</item>
